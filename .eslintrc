{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "graphql"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "react/prop-types": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ],
        "moduleDirectory": [
          "node_modules",
          "libs"
        ]
      }
    }
  }
}